<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    >


        <LinearLayout
            android:id="@+id/notificationLinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/notificationImage"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/reputation"
                    android:scaleType="fitCenter"/>

                <RelativeLayout
                    android:id="@+id/NotificationRelativeLayout2"
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                        <TextView
                            android:id="@+id/NotificationAppName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="0dp"
                            android:text="appName"
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/notificationSongName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/notificationArtistName"
                            android:layout_below="@+id/NotificationAppName"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="songName"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/notificationArtistName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="artistName"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:textStyle="italic" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/notificationPreviousButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/notification_previous"
                            android:src="@android:color/transparent" />
                </RelativeLayout>
                <ImageButton
                    android:id="@+id/notificationPlayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/notification_pause"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:id="@+id/notificationNextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:background="@drawable/notification_next"/>


        </LinearLayout>

</RelativeLayout>